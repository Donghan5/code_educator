# Ollama API 설정
OLLAMA_API_BASE=http://localhost:11434
OLLAMA_DEFAULT_MODEL=codellama

# FastAPI 서버 설정
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=info

# 프론트엔드 URL (CORS 설정용)
FRONTEND_URLS=http://localhost:3000,http://localhost:5173

# 개발 모드 설정
DEV_MODE=local

# Python 경로 (필요한 경우)
PYTHONPATH=.

# 로그 설정
LOG_FILE=logs/code_educator.log

# 파일 업로드 설정
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.py,.js,.cpp,.c,.hpp,.h,.ts,.tsx,.jsx

# AI 설정
DEFAULT_AI_MODEL=codellama
AI_TIMEOUT=30
AI_MAX_RETRIES=3

# 코드 분석 설정
MAX_CODE_LENGTH=100000  # 100KB
QUALITY_THRESHOLD=70

# 캐시 설정 (향후 사용)
ENABLE_CACHE=false
CACHE_TTL=3600